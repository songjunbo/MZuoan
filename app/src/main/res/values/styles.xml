<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 加载框 -->
    <style name="loading_dialog_style" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="dialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="dialogTitleText">正在加载…</item>
        <item name="dialogSpotCount">5</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ToastStyle -->
    <style name="Toast_textAppearance">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
